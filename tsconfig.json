{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ES2022"],
    "outDir": "./dist",
    "baseUrl": ".",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "paths": {
      "@soon/*": ["./src/*"]
    }
  }
}
